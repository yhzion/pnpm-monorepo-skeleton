{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@mmlp/*": ["packages/*/src", "apps/*/src"]
      },
      "outDir": "dist",
      "declaration": true
    },
    "include": ["packages/*/src", "apps/*/src"]
  }